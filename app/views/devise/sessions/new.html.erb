<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class => "form-horizontal"}) do |f| %>
  <fieldset>
  	<legend> Вход </legend>
    <div class="form-group">
      <label class="col-sm-3 control-label">Email</label>
      <div class="col-sm-4">
        <%= f.email_field :email, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Пароль</label>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control input-sm"  %>
      </div>
    </div>

    
	<% if devise_mapping.rememberable? -%>
	  <div class="form-group">
	  	<label class="col-sm-3 control-label">Запомнить меня?</label>
	  	<div class="col-sm-4">
	  		<%= f.check_box :remember_me, { class: 'checkbox' } %> 
	  	</div>
	  </div>
	<% end -%>

	  <div class="form-group">
      <label class="col-sm-3 control-label"></label>
      <div class="col-sm-4"><%= f.submit "Войти", class: "btn btn-primary" %></div>
    </div>

  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
