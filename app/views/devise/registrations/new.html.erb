<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset>
    <legend> Регистрация нового пользователя </legend>

    <div class="form-group">
      <label class="col-sm-3 control-label">Email</label>
      <div class="col-sm-4">
        <%= f.email_field :email, class: "form-control input-sm" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Пароль</label>
      <div class="col-sm-4">
        <%= f.password_field :password, class: "form-control input-sm"  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-3 control-label">Подтверждение пароля</label>
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, class: "form-control input-sm"  %>
      </div>
    </div>
        <div class="form-group">
      <label class="col-sm-3 control-label">Имя</label>
      <div class="col-sm-4">
        <%= f.text_field :fname, class: "form-control input-sm"  %>
      </div>
    </div>
        <div class="form-group">
      <label class="col-sm-3 control-label">Фамилия</label>
      <div class="col-sm-4">
        <%= f.text_field :lname, class: "form-control input-sm"  %>
      </div>
    </div>
        <div class="form-group">
      <label class="col-sm-3 control-label">Отчество</label>
      <div class="col-sm-4">
        <%= f.text_field :oname, class: "form-control input-sm"  %>
      </div>
    </div>
        <div class="form-group">
      <label class="col-sm-3 control-label">Отдел</label>
      <div class="col-sm-4">
        <%= f.text_field :to, class: "form-control input-sm"  %>
      </div>
    </div>


    <div><%= f.submit "Зарегестрироваться", class: "btn btn-primary" %></div>
  </fieldset>
<% end %>

  
<%= render "devise/shared/links" %>
